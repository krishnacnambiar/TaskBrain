{
  "manifest_version": 3,
  "name": "Task Brain",
  "description": "Capture tasks from the browser and send them to Task Brain.",
  "version": "0.1.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Task Brain"
  },
  "options_page": "options.html",
  "permissions": ["storage", "tabs", "scripting"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
